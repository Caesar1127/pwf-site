
<table>
  <tr>
    <th>Name</th>
    <th>Dob</th>
    <th>Gender</th>
    <th>Registration status for <%=current_season.description%></th>
  </tr>

  <% current_parent.students.each do |student| %>
    <tr>
      <td><%= link_to  student.name, student_path(student), :id => "student_id_#{student.id}" %></td>
      <td><%= student.dob %></td>
      <td><%= student.gender %></td>
      <td><%= student.gender %></td>
      <td><%= student.currently_registered? %>&nbsp;
        <%if student.currently_registered? %>
          <%=link_to "Click here to see the reciept", confirmation_student_registration_path(student.current_registration), :id => "receipt_reg_id_#{student.current_registration.id}"%>
        <%end%>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Add and register a new student",new_student_path, :id => "new_registration" %>

