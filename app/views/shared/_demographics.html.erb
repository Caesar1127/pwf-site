<h3> Demographic Data
  <p class='sub-section'> Please provide the following information about your household.</p>
  <p class='sub-section'> We gather these statistics for our reporting to our funders .</p>
</h3>
<%= f.simple_fields_for :demographics  do |d|%>
  <div id= "household_details">
    <%= d.input :num_adults, :input_html=>{:min =>1, :id => :num_adults} %>
    <%= d.input :num_minors, :input_html=>{:min =>1, :id => :num_minors}%>
    <%= d.input :income_range_cd, :as => :radio_buttons, :collection => Demographic.income_ranges_for_select(:value), :input_html=>{:id => :income_range} %>
    <%= d.input :education_level_cd, :as => :radio_buttons, :collection => Demographic.education_levels_for_select(:value), :input_html=>{:id => :income_level} %>
    <%= d.input :home_ownership_cd, :as => :radio_buttons,  :collection => Demographic.home_ownerships_for_select(:value),  :input_html=>{:id => :home_ownership}%>
  </div>
<%end%>

