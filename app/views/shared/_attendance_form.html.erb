<div class="attendance-form">
  <%count = 0%>
  <%= form_for @attendance_sheet  do |sheet| %>
    <%=sheet.fields_for :attendances  do |attendance|  %>
    <div>
    <%= sheet.hidden_field :session_date %>
    </div>
      <%=attendance.label :attended, "#{count+=1} #{attendance.object.student_registration.student_name}", :class=> "attendance" %>
      <%=attendance.check_box :attended %>
    <%end%>
    <div style="clear:left">
      <%= sheet.submit :commit %>
    </div>
  <% end %>
</div>

