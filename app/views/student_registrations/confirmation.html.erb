<div class="row">
  <div  class="data-block span12" >
    <p class="section-header">STUDENT INFORMATION</p>
    <div class="form-unit">
      <span class="form-label">Student Name:</span>
      <span class="reg-data"><%="#{@student.name}" %></span>
    </div>
    <div class="form-unit">
      <span class="form-label">Birth Date:</span>
      <span class="reg-data"><%=format_date(@student.dob) %></span>
    </div>
    <div class="form-unit">
      <span class="form-label">Age:</span>
      <span class="reg-data"><%=@student.age %></span>
    </div>
    <div class="form-unit">
      <span class="form-label">Registration Date:</span>
      <span class="reg-data"><%=format_date(@student.current_registration.created_at) %></span>
    </div>
    <div class="form-unit">
      <span class="form-label">Registration Status:</span>
      <span class="reg-data"><%=@student.current_registration.status %></span>
    </div>
  </div>
  <div class="data-block span12">
    <div class="form-unit">
      <p class="sub-section">Medical Conditions</p>
      <p class="reg-data long"> <%=@student_registration.medical_notes %></p>
    </div>
  </div>
  <div class="data-block span12" >
    <p class="section-header"> PARENT/GUARDIAN INFORMATION</p>
    <div class="form-unit ">
      <span class="form-label">Parent Name:</span>
      <span class="reg-data"><%="#{@student.parent.name}" %></span>
    </div>
    <div class="form-unit ">
      <span class="form-label"> Phone:</span>
      <span class="reg-data"><%=@student.parent.primary_phone %></span>
    </div>
    <div class="form-unit ">
      <span class="form-label">Alt. Phone:</span>
      <span class="reg-data"><%=@student.parent.secondary_phone %></span>
    </div>
    <div class="form-unit ">
      <span class="form-label">Email:</span>
      <span class="reg-data"><%=@student.parent.email %></span>
    </div>
  </div>
</div>


