<%content_for :page_header do%>
	<h1><%="#{current_parent.name}"%> <small><%="#{current_season.term}"%></small></h1>
<%end%>
<div class="row">
	<div class="col-md-6">
		<div class="portlet">

			<div class="portlet-header">
				<h3> <i class="fa fa-group"></i> Current Students </h3>
			</div>

			<div class="portlet-content">
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<!--th>Dob</th>
							<th>Gender</th-->
							<th>Fencing</th>
							<th>AEP</th>
							<th>First Report Card </th>
							<th>Last Report Card </th>
						</tr>
					</thead>
					<tbody>
					<% @parent.students.each do |student| %>
						<tr>
							<td><%=link_to  student.name, student_path(student), :id => "student_id_#{student.id}" %></td>
							<!--td><%#student.dob %></td>
							<td><%#student.gender %></td-->
							<td><%=student.registration_status %> <%=student_registration_helper student%> </td>
							<td> <%student_aep_link(student)%> </td>
							<td><%=student_report_card_helper student%></td>
							<td><%=student_report_card_helper student%></td>
						</tr>
					<% end %>
					</tbody>
				</table>
				<button class="btn btn-small btn-primary pull-right">Register New Student</button>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<div class="portlet">
			<div class="portlet-header">
				<h3> <i class="fa fa-money"></i>Fees</h3>
			</div>
			<div class="portlet-content">

				<div  id="parent-links">
					<table class="table table-striped table-bordered" >
						<thead>
							<tr>
								<th>Program</th>
								<th>Enrolled</th>
								<th>Unpaid</th>
								<th>Pay</th>
							</tr>
						</thead>
						<tbody>
						<tr>
							<td>Saturday Fencing</td>
							<td><%=current_parent.student_registrations.current.count %></td>
							<td><%=current_parent.current_unpaid_pending_registrations.count %></td>
							<td>
							</td>
						</tr>
						<tr>
							<td>Academic Enrichment</td>
							<td><%=current_parent.aep_registrations.current.count %></td>
							<td><%=current_parent.current_unpaid_aep_registrations.count %></td>
							<td>
							</td>
						</tr>
						</tbody>
					</table>
				</div>

				<%if current_parent.has_unpaid_pending_registrations?%>
					<%= link_to "Pay Fee",new_payment_path, :id => "pay", :class=>"pay-fee" %>
				<%else%>
					No unpaid fencing registrations 
				<%end%>


				<%if current_parent.has_unpaid_aep_registrations? %>
					<%= link_to "Pay Fee",new_payment_path(:program=> "aep"), :id => "pay_aep", :class=>"pay-fee" %>
				<%else%>
					No unpaid AEP registrations
				<%end%>
			</div>
		</div>
	</div>
</div>

