<%content_for :page_hdr do%>
  Dashboard
<%end%>

<div class="row">
  <div class="col-sm-12 ">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Students Registered</h3>

        <div class="card-tools">
          <span class="badge badge-danger"><%=current_user.registrations_count%></span>
        </div>
      </div>
      <div class="card-body p-0">
        <ul class="users-list clearfix">
          <%current_user.student_registrations.current.each do |reg|%>
            <li>
              <%=image_tag render_avatar(reg.student), class:"img-circle elevation-2"%> 
              <%=link_to reg.student_first_name, student_path(reg.student), class: "users-list-name"%> 
              <!--a class="users-list-name" href="#"><%=reg.student_first_name%></a-->
              <span class="users-list-date"><%=reg.status%></span>
              <span class="badge bg-success"><%=reg.status%></span>
            </li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>




<div class="row">
  <div class="col-md-6 col-sm-12">

    <div class="card card-widget">
      <div class="card-header bg-info">
        <h5>Current Season Students</h5>
        <h6><%=Season.current.slug%></h6>
      </div>
      <div class="card-body p-0">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a href="#" class="nav-link">
              Registered <span class="float-right badge bg-info"><%=current_user.registrations_count%></span>
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">
              Confirmed <span class="float-right badge bg-success"><%=current_user.current_aep_registrations_count%></span>
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">
              Enrolled in AEP <span class="float-right badge bg-black"><%=current_user.current_confirmed_registrations_count%></span>
            </a>
          </li>
          <li class="nav-item">
            <%=link_to new_payment_path(program: :fencing),  class:"nav-link" do %>
              Awaiting Payment
              <span class="float-right badge bg-warning">
                <%=current_user.unpaid_registrations_count%>
              </span>
              <%end%>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
