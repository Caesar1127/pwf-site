<% if report_cards.count > 0 %>
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Student</th>
        <th>Session</th>
        <th>Term</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% report_cards.each do |report_card| %>
        <tr>
          <td><%= report_card.student_name %></td>
          <td><%= link_to report_card.marking_period_name, report_card_path(report_card) %></td>
          <td><%=report_card.academic_year%></td>
          <td>

            <%if report_card.transcript.attached?%>
              <%= link_to url_for(report_card.transcript), class: 'btn' do %>
                <i class="fa fa-download"></i>
              <%end%>
            <%end%>

            <%= link_to report_card_path(report_card),
              :method => :delete,
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn' do%>
              <i class="fa fa-trash"></i>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%else%>
  <div class="p-2 pt-2 text-info">No report cards submitted for <%=type%> year</div>
<% end %>
