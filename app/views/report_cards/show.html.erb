<%- model_class = ReportCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:student_registration_id) %>:</strong></dt>
  <dd><%= @report_card.student_registration_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marking_period) %>:</strong></dt>
  <dd><%= @report_card.marking_period_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:format_cd) %>:</strong></dt>
  <dd><%= @report_card.format_cd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transcript) %>:</strong></dt>

  <dd> 
  <%if @report_card.transcript.url%>
    <%=link_to image_tag("report_card.jpeg"), @report_card.transcript.to_s%>
<%else%>
    <a href="#" class="file-chooser-proxy" data-target="#report_card">Attach Copy of Report Card</a>
<%end%>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    report_cards_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_report_card_path(@report_card), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    report_card_path(@report_card),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
</div>


  <div id="direct_uploader">
    <%= direct_upload_form_for @uploader, :html =>{:class => "upload_form"} do |f| %>
      <%= f.file_field :transcript, :class=>"file-chooser",  :id=>"report_card" %>
  <% end %>
  </div>
