<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header no-border">
        <h3 class="card-title"></h3>
      </div>
      <div class="card-body p-0">
        <table class="table table-striped table-valign-middle">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Grade</th>
              <th>Number Grade</th>
            </tr>
          </thead>
          <tbody>
            <%@report_card.grades.each do|grade| %>
              <tr>
                <td><%=grade.subject_name %></td>
                <td>
                  <%=grade.value %>
                </td>
                <td>
                  <small class="text-success mr-1">
                    <i class="fa fa-arrow-up"></i>
                  </small>
                    <%=grade.normalize_to_hundred_point%>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
          <%if @report_card.transcript.attached?%>
            <%=link_to  url_for(@report_card.transcript), class:"btn btn-tool btn-sm" do%>
              <i class="fa fa-download"></i>
            <%end%>
          <%else%>
            <%=link_to edit_report_card_path(@report_card), class:"btn btn-tool btn-sm" do%>
              <i class="fa fa-upload"></i>
            <%end%>
          <%end%>
      </div>
    </div>
  </div>
</div>


