<%=content_for :page_hdr do%>
  <%=" Report Card #{@report_card.student_name} "%> 
<%end%>
<%=content_for :page_sub_hdr do%>
  <%="#{@report_card.slug}"%> 
<%end%>
<div class="row">
  <!-- left column -->
  <div class="col-md-7">
    <%= render partial: "transcript_viewer", locals:{report_card: @report_card} %>
  </div>
  <div class="col-md-5">
    <div class="card">
      <div class="card-header bg-info">
        <h3 class="card-title float-left">Grades</h3>
        <div class="float-right">
          <i class="fa fa-edit fa-1x"></i>Edit
        </div>
      </div>
      <div class="card-body p-0">
        <table class="table table-striped table-valign-middle">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Grade</th>
              <th>Number Grade</th>
            </tr>
          </thead>
          <tbody>
            <%@report_card.grades.each do|grade| %>
              <tr>
                <td><%=grade.subject_name %></td>
                <td>
                  <%=grade.value %>
                </td>
                <td>
                  <%=grade.normalize_to_hundred_point%>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


