<%- model_class = Tutor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:occupation) %>:</strong></dt>
  <dd><%= @tutor.occupation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emergency_contact_name) %>:</strong></dt>
  <dd><%= @tutor.emergency_contact_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emergency_contact_primary_phone) %>:</strong></dt>
  <dd><%= @tutor.emergency_contact_primary_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emergency_contact_secondary_phone) %>:</strong></dt>
  <dd><%= @tutor.emergency_contact_secondary_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emergency_contact_relationship) %>:</strong></dt>
  <dd><%= @tutor.emergency_contact_relationship %></dd>
  <dt><strong><%= model_class.human_attribute_name(:returning) %>:</strong></dt>
  <dd><%= @tutor.returning %></dd>
  <dt><strong><%= model_class.human_attribute_name(:season_id) %>:</strong></dt>
  <dd><%= @tutor.season_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tutors_path, :class => 'btn'  %>
</div>
