<%- model_class = AttendanceSheet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Total Registration</th>
      <th>Present</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attendance_sheets.each do |attendance_sheet| %>
      <tr>
        <td><%= link_to format_date(attendance_sheet.session_date), edit_attendance_sheet_path(attendance_sheet.id) %></td>
        <td><%=  attendance_sheet.attendances.count %></td>
        <td><%=  attendance_sheet.attendances.present.count %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_attendance_sheet_path(attendance_sheet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      attendance_sheet_path(attendance_sheet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_attendance_sheet_path,
            :class => 'btn btn-primary' %>
