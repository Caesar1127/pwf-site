<div class="page-header">
  <h1>Attendance Sheet</h1>
  <h3><%=format_date(@attendance_sheet.session_date)%></h3>
</div>
<div class="row">
  <div class = "span4">
    <table class="table table-striped table-bordered">
      <caption>Present</caption>
      <thead>
        <tr>
          <th>Name</th><th>Check In Time</th>
        </tr>
      </thead>
      <tbody>
      <%@attendance_sheet.attendees.each do|attendance|%>
        <tr class="<%=attendance.late? ? 'error': 'success'%>"><td><%=attendance.student_name%></td><td><%=format_time attendance.updated_at%></td></tr>
    <%end%>
      </tbody>
    </table>
  </div>

  <div class="span4">
    <table class="table table-striped table-bordered">
      <caption>Absent</caption>
      <thead>
        <tr>
          <th>Name</th><th>Reason</th>
        </tr>
      </thead>
      <tbody>
      <%@attendance_sheet.absentees.each do|attendance|%>
        <tr><td><%=attendance.student_name%></td><td></td></tr>
    <%end%>
      </tbody>
    </table>
  </div>
</div>
