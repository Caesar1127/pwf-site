<%- model_class = GradeFormat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @grade_format.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade_type) %>:</strong></dt>
  <dd><%= @grade_format.grade_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:strategy) %>:</strong></dt>
  <dd><%= @grade_format.strategy %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mgr_grade_formats_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mgr_grade_format_path(@grade_format), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mgr_grade_format_path(@grade_format),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
