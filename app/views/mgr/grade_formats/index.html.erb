<%- model_class = GradeFormat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:grade_type) %></th>
      <th><%= model_class.human_attribute_name(:strategy) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @grade_formats.each do |grade_format| %>
      <tr>
        <td><%= link_to grade_format.id, mgr_grade_format_path(grade_format) %></td>
        <td><%= grade_format.name %></td>
        <td><%= grade_format.grade_type %></td>
        <td><%= grade_format.strategy %></td>
        <td><%=l grade_format.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mgr_grade_format_path(grade_format), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mgr_grade_format_path(grade_format),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mgr_grade_format_path,
            :class => 'btn btn-primary' %>
