<div class="page-header">
  <h1>Parents</h1>
  <h3><%=current_season.term%></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>In AEP?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= link_to parent.name, mgr_parent_path(parent) %></td>
        <td><%= yesno parent.has_current_aep_registration?%></td>
        <td>
          <%= link_to "Edit",
                      edit_mgr_parent_path(parent), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

