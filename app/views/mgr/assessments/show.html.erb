<div class="page-header">
  <h1>Assessment</h1>
  <h3> <%="#{@assessment.term}--#{@assessment.level}"%></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Math Questions:</strong></dt>
  <dd><%= @assessment.math_questions %></dd>
  <dt><strong>Reading Questions:</strong></dt>
  <dd><%= @assessment.reading_questions %></dd>
  <dt><strong>Writing Questions:</strong></dt>
  <dd><%= @assessment.writing_questions %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mgr_assessments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mgr_assessment_path(@assessment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mgr_assessment_path(@assessment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
