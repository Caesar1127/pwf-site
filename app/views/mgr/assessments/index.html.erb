<div class="page-header">
  <h1>Assessments</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Season</th>
      <th>Level</th>
      <th>Evaluation</th>
      <th>Math</th>
      <th>Reading</th>
      <th>Writing</th>
    </tr>
  </thead>
  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.term %></td>
        <td><%= assessment.level %></td>
        <td><%= assessment.evaluation %></td>
        <td><%= assessment.math_questions %></td>
        <td><%= assessment.reading_questions %></td>
        <td><%= assessment.writing_questions %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mgr_assessment_path(assessment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mgr_assessment_path(assessment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mgr_assessment_path,
            :class => 'btn btn-primary' %>
