<%= simple_form_for @workshop, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :tutor_id %>
  <%= f.input :notes %>
  <%= f.input :season_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mgr_workshops_path, :class => 'btn' %>
  </div>
<% end %>
