<%= simple_form_for @workshop, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
<%= f.association :tutor, :collection => Tutor.all.map{|t| [t.name, t.id]} %>
<%= f.input :notes %>

<div class="form-actions">
  <%= f.button :submit, :class => 'btn-primary', :id=>"save" %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    mgr_workshops_path, :class => 'btn' %>
</div>
<% end %>
