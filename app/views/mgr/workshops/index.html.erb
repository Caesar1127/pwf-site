<%- model_class = Workshop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="dtable table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tutor</th>
      <th>Notes</th>
      <th>Season</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= link_to workshop.name, mgr_workshop_path(workshop) %></td>
        <td><%= workshop.tutor_name %></td>
        <td><%= workshop.notes %></td>
        <td><%= workshop.season.term %></td>
        <td>
          <%= link_to "Edit",
                      edit_mgr_workshop_path(workshop), :class => 'btn btn-mini' %>
          <%= link_to "Delete",
                      mgr_workshop_path(workshop),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mgr_workshop_path,
            :class => 'btn btn-primary' %>
