<div class="page-header">
  <h1>Tutoring Assignments </h1>
</div>
<table class="dtable table table-striped">
  <thead>
    <tr>
      <th>Tutor</th>
      <th>Student</th>
      <th>Subject</th>
      <th>NOtes</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tutoring_assignments.each do |tutoring_assignment| %>
      <tr>
        <td><%= tutoring_assignment.tutor_name %></td>
        <td><%= tutoring_assignment.student_name %></td>
        <td><%= tutoring_assignment.subject_name %></td>
        <td><%= tutoring_assignment.notes %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mgr_tutoring_assignment_path(tutoring_assignment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mgr_tutoring_assignment_path(tutoring_assignment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mgr_tutoring_assignment_path,
            :class => 'btn btn-primary' %>
