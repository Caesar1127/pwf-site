<div class="page-header">
  <h1>Student Assessment</h1>
  <h3> <%= @student_assessment.student_name %></h3>
</div>

 <table class="table">
   <thead>
   <tr>
     <th>Test</th><th>Math</th><th>Reading</th><th>Writing</th><th>Overall</th>
   </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @student_assessment.pre_test_date %></td>
      <td><%= @student_assessment.pre_test_reading_score %></td>
      <td><%= @student_assessment.pre_test_writing_score %></td>
      <td><%= @student_assessment.pre_test_overall_score %></td>
    </tr>
    <tr>
      <td><%= @student_assessment.post_test_date %></td>
      <td><%= @student_assessment.post_test_reading_score %></td>
      <td><%= @student_assessment.post_test_writing_score %></td>
      <td><%= @student_assessment.post_test_overall_score %></td>
    </tr>
  </tbody>
 </table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mgr_student_assessments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mgr_student_assessment_path(@student_assessment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mgr_student_assessment_path(@student_assessment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
