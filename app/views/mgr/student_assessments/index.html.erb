<%- model_class = StudentAssessment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:aep_registration_id) %></th>
      <th><%= model_class.human_attribute_name(:pre_test_grade) %></th>
      <th><%= model_class.human_attribute_name(:pre_test_date) %></th>
      <th><%= model_class.human_attribute_name(:post_test_grade) %></th>
      <th><%= model_class.human_attribute_name(:post_test_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @student_assessments.each do |student_assessment| %>
      <tr>
        <td><%= link_to student_assessment.id, mgr_student_assessment_path(student_assessment) %></td>
        <td><%= student_assessment.aep_registration_id %></td>
        <td><%= student_assessment.pre_test_grade %></td>
        <td><%= student_assessment.pre_test_date %></td>
        <td><%= student_assessment.post_test_grade %></td>
        <td><%= student_assessment.post_test_date %></td>
        <td><%=l student_assessment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mgr_student_assessment_path(student_assessment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mgr_student_assessment_path(student_assessment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mgr_student_assessment_path,
            :class => 'btn btn-primary' %>
