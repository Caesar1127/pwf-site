<%= simple_form_for @letter_to_number_grade_converter, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :letter %>
  <%= f.input :scale %>
  <%= f.input :strategy %>
  <%= f.input :min %>
  <%= f.input :max %>
  <%= f.input :custom %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mgr_letter_to_number_grade_converters_path, :class => 'btn' %>
  </div>
<% end %>
