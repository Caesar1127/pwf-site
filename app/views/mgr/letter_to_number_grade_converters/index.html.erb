<%- model_class = LetterToNumberGradeConverter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:letter) %></th>
      <th><%= model_class.human_attribute_name(:scale) %></th>
      <th><%= model_class.human_attribute_name(:strategy) %></th>
      <th><%= model_class.human_attribute_name(:min) %></th>
      <th><%= model_class.human_attribute_name(:max) %></th>
      <th><%= model_class.human_attribute_name(:custom) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @letter_to_number_grade_converters.each do |letter_to_number_grade_converter| %>
      <tr>
        <td><%= link_to letter_to_number_grade_converter.id, mgr_letter_to_number_grade_converter_path(letter_to_number_grade_converter) %></td>
        <td><%= letter_to_number_grade_converter.letter %></td>
        <td><%= letter_to_number_grade_converter.scale %></td>
        <td><%= letter_to_number_grade_converter.strategy %></td>
        <td><%= letter_to_number_grade_converter.min %></td>
        <td><%= letter_to_number_grade_converter.max %></td>
        <td><%= letter_to_number_grade_converter.custom %></td>
        <td><%=l letter_to_number_grade_converter.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mgr_letter_to_number_grade_converter_path(letter_to_number_grade_converter), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mgr_letter_to_number_grade_converter_path(letter_to_number_grade_converter),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mgr_letter_to_number_grade_converter_path,
            :class => 'btn btn-primary' %>
