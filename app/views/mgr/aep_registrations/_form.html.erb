<%= simple_form_for @aep_registration, :html => { :class => 'form form-horizontal' } do |f| %>
<fieldset>
  <div id="legend">
    <legend>
      <%= @aep_registration.student_name %>
    </legend>
  </div>
<%= f.error_notification %>
<%=render partial: "shared/common_aep_reg_form_fields", locals: {f:f} %>
  <%=f.input :student_academic_contract, :label => false, :inline_label => "Student Academic  Contract"%>
<%=f.input :parent_participation_agreement, :label => false, :inline_label => "Parent Participation Agreement"%>
<%=f.input :transcript_test_score_release, :label => false, :inline_label => "Transcript & Test Score Release"%>
<%=f.input :payment_status, collection: AepRegistration.payment_statuses_for_select %>
</fieldset>
<div class="form-actions">
<%= f.button :submit, :class => 'btn-primary', :id => "save" %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  workshops_path, :class => 'btn' %>
</div>
<% end %>
