<%=simple_fields_for "" do |ff|%>
  <h5>Card Details</h5>

  <div class="row">
    <%=ff.input :card_number, input_html: {name: nil, :"data-stripe"=>"number"}, wrapper_html:{class: "col-4"} %>
    <%=ff.input :card_month, input_html: {name: nil, :"data-stripe"=>"exp-month"}, wrapper_html:{class: "col"} %>
    <%=ff.input :card_year, input_html: {name: nil, :"data-stripe"=>"exp-year"}, wrapper_html:{class: "col"}%>
    <%=ff.input :card_code, input_html: {name: nil, :"data-stripe"=>"cvc"}, wrapper_html:{class: "col"}%>
  </div>

  <div class="mt-3">
    <h5>Billing Address</h5>
    <div class="row ">
      <%= ff.input :address_line1, label: "Address", wrapper_html:{class: "col-6"}%>
      <%= ff.input :address_line2, label: "Address 2", required: false, wrapper_html:{class: "col-6"}%>
    </div>
    <div class="row">
      <%= ff.input :address_city, label: "City", wrapper_html:{class: "col-6"} %>
      <%= ff.input :address_state, label: "State", wrapper_html:{class: "col-3"} %>
      <%= ff.input :address_zip, label: "Zip", wrapper_html:{class: "col-3"}    %>
    </div>
  </div>
<%end%>
