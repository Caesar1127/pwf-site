<table>
  <thead>
    <tr>
      <th>Data Point</th> <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Total no. students registered</td><td><%= StudentRegistration.confirmed_students_count%></td>
    </tr>
    <tr>
      <td>Total no. households</td><td><%= Parent.with_confirmed_registrations_count%></td>
    </tr>
    <tr>
      <td>Current Season Wait list</td><td><%= StudentRegistration.current_wait_listed_count%></td>
    </tr>
  </tbody>
</table>

<section>
  <h3>Income level by student household</h3>
  <%=pie_chart(StudentsDemographicsDashboard.pct_of_students_per_incomge_range, title: "Percent students per range", suffix: "%",legend: "bottom", download: true)%>

  <table>
    <thead>
      <tr>
        <th>Segment</th> <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <%StudentsDemographicsDashboard.count_of_students_per_incomge_range.each do |segment, count|%>
        <tr>
          <td><%=segment%></td><td><%=count%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</section>

