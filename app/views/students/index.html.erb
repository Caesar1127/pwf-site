<%=content_for :page_hdr do%>
  My Students
<%end%>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Students</h3>
    <div class="card-body table-responsive p-0">
      <table class="table table-hover">
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
        </tr>

        <% @students.each do |student| %>
          <tr>
            <td><%= link_to student.name, student_path(student) %></td>
            <td><%= link_to 'Edit', edit_student_path(student) %></td>
            <td><%= link_to 'Delete', student, confirm: 'Are you sure?', method: :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="card-footer">
      <%= link_to 'New Student', new_student_path, class:"btn btn-info" %>
      <a class="btn btn-default float-right" href="/dashboard">Cancel</a>
    </div>
  </div>
</div>
<br />

