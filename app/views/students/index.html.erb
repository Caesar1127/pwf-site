<%content_for :page_header do%>
 <h1>My Students</h1>
<%end%>


<br />
<div class="portlet">

	<div class="portlet-header">

		<h3>
			<i class="fa fa-group"></i>
			Students in PWF 
		</h3>

		<ul class="portlet-tools pull-right">
			<li>
			<%= link_to 'New Student', new_student_path, class:"btn btn-sm btn-default" %>
			</li>
		</ul>

	</div> <!-- /.portlet-header -->

	<div class="portlet-content">


		<div class="table-responsive">
			<table class="table table-striped ">
				<thead>
					<tr>
						<th>First name</th>
						<th>Last name</th>
						<th>Fencing</th>
						<th>AEP</th>
						<th >Action</th>
					</tr>
				</thead>
				<tbody>
				<% @students.each do |student| %>
					<tr>
						<td><%= student.first_name %></td>
						<td><%= student.last_name %></td>
						<td><%= yesno student.currently_registered?%></td>
						<td><%= yesno student.currently_in_aep?%></td>
						<td><%= link_to 'Show', student %>
						<%= link_to 'Edit', edit_student_path(student) %>
						<%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %></td>
					</tr>

				<% end %>
				</tbody>
			</table>

		</div> <!-- /.portlet-content -->

	</div>
